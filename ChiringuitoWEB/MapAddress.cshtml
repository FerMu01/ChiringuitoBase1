@using ChiringuitoWEB.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Map Coordinates</title>
    <script src="~/Scripts/jquery-3.7.1.min.js" type="text/javascript"></script>
</head>
<body>
    <h1>Map Coordinates</h1>
    <form method="post">
        <fieldset>
            <div>
                <label for="latitude">Latitude:&nbsp;&nbsp;&nbsp;</label>
                <input type="text" name="latitude" value="@Request["latitude"]" />
            </div>
            <div>
                <label for="longitude">Longitude:</label>
                <input type="text" name="longitude" value="@Request["longitude"]" />
            </div>
            <div>
                <input type="submit" value="Map It!" />
            </div>
        </fieldset>
    </form>
    @if (IsPost)
    {
        @ChiringuitoWEB.Helpers.MapsHelper.GetBingHtml(
            key: "AnwbaMoJzU83DbBYxWWGkM5_t-vh8km3PNxeOmv0sVAjHZkeO-AmJbCSqY9hZZgd",
            latitude: Request["latitude"],
            longitude: Request["longitude"],
            width: "700",
            height: "700"
        )
    }
</body>
</html>
